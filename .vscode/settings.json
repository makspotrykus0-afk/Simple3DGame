{
    "git.ignoreLimitWarning": true,
    "git.autorefresh": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "build/": true,
        "vcpkg/": true,
        "vendor/": true,
        "raylib/": true,
        "resources/": true,
        "**/*.o": true,
        "**/*.exe": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "build/": true,
        "vcpkg/": true,
        "vendor/": true,
        "raylib/": true
    },
    "lldb.displayFormat": "auto",
    "lldb.showDisassembly": "auto",
    "lldb.dereferencePointers": true,
    "lldb.consoleMode": "commands",
    "markdown.validate.enabled": false,
    "editor.mouseWheelZoom": true
}